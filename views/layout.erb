<!doctype html>
<html>
  <head>
    <title>WorkOS IdP Link Example - Ruby Api</title>
    <link 
      rel="stylesheet"
      href="https://unpkg.com/purecss@1.0.1/build/pure-min.css"
      integrity="sha384-oAOxQR6DkCoMliIh8yFnu25d7Eq/PHS21PClpwjOTeU2jRSq11vu66rf90/cZr47"
      crossorigin="anonymous"
    >
    <link rel="stylesheet" type="text/css" href="<%= url("/styles.css")%>">
    </head>
  <body>

   <div id="layout">
    <!-- Menu toggle -->
      <a href="#menu" id="menuLink" class="menu-link">
          <span></span>
      </a>

      <div id="menu">
        <div class="pure-menu">
          <a class="pure-menu-heading" href="#">SaasCo</a>
          <ul class="pure-menu-list">
            <li class="pure-menu-item"><a href="#" class="pure-menu-link">Home</a></li>
            <li class="pure-menu-item"><a href="#" class="pure-menu-link">My Tasks</a></li>

            <li class="pure-menu-item">
                <a href="#" class="pure-menu-link">Inbox</a>
            </li>

            <li class="pure-menu-item"><a href="#" class="pure-menu-link pure-menu-selected menu-item-divided">Account Settings</a></li>
          </ul>
        </div>
      </div>

      <%= yield %>


    </div>
    <% if Sinatra::Base.development? %>
      <script type="text/javascript" src="http://localhost:8080/public/lib/workos-widget.js"></script>
    <% else %>
      <script type="text/javascript" src="https://cdn.workos.com/widget.js"></script>
    <% end %>  
  </body>
</html>